<!-- src/main/resources/mapper/TicketMapper.xml -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nest.diamond.mapper.TicketMapper">

    <select id="search" resultType="com.nest.diamond.model.domain.Ticket">
        SELECT * FROM ticket
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="airdropOperationName != null and airdropOperationName != ''">
                AND airdrop_operation_name LIKE CONCAT('%', #{airdropOperationName}, '%')
            </if>
            <if test="ticketNo != null and ticketNo != ''">
                AND ticket_no = #{ticketNo}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>

        </where>
        ORDER BY create_time DESC
    </select>
</mapper>