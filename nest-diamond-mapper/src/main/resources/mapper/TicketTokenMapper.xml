<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nest.diamond.mapper.TicketTokenMapper">

    <select id="search" resultType="com.nest.diamond.model.domain.TicketToken" parameterType="hashmap">
        select * from ticket_token
        <where>
            <if test="ticketNo != null and ticketNo != ''">
                and ticket_no = #{ticketNo}
            </if>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>
</mapper>