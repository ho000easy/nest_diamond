<!-- src/main/resources/mapper/WorkOrderMapper.xml -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nest.diamond.mapper.WorkOrderMapper">

    <select id="search" resultType="com.nest.diamond.model.domain.WorkOrder">
        SELECT * FROM work_order
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="airdropOperationName != null and airdropOperationName != ''">
                AND airdrop_operation_name LIKE CONCAT('%', #{airdropOperationName}, '%')
            </if>
            <if test="workOrderNo != null and workOrderNo != ''">
                AND work_order_no = #{workOrderNo}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>

        </where>
        ORDER BY create_time DESC
    </select>
</mapper>